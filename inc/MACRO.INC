;	    *** MACRO DEFINITION ***
;



EVEN		MACRO			;word boundary
		DS.W	0
		ENDM


MESS_ON		MACRO
		ADDQ.B	#1,MESS_BUSY(A5)
		MOVE.L	MESS_POINT(A5),A0
		ENDM

MESS_OFF	MACRO
		MOVE.L	A0,MESS_POINT(A5)
		SUBQ.B	#1,MESS_BUSY(A5)
		ENDM


SOUND		MACRO	CODE		;SET_SOUND request
		MOVE.W	CODE,D0
		JSR.S	SET_SOUND
		ENDM

SPHERO		MACRO	CODE		;SET_SPHERO request
		MOVE.W	CODE,D0
		JSR.S	SET_SPHERO
		ENDM


BGM		MACRO	CODE		;SET_BGM request
		MOVE.W	CODE,D0
		JSR.S	SET_BGM
		ENDM





